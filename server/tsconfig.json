{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2015",
    "module": "CommonJS"
  },
  "include": ["**/*"],
  "exclude": ["spec", "**/*.spec.ts"]
}
